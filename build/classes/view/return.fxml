<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ReturnController"
 alignment="center" spacing="10" 
      styleClass="root">

   <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <HBox alignment="center" spacing="10" >
        <Label text="Patron ID:" />
        <TextField fx:id="patronTf" text="" />
        <Button fx:id="getPBT" text = "Select Patron" styleClass="button" disable="true" onAction="#handlePatron"/>
       
    </HBox>
   <Label text="Borrowed Books:" styleClass="Label"/>
   <ListView fx:id="BorrowedBookLV" prefWidth="300" prefHeight="100" />
        <Button fx:id="returnBT" text = "Return Selected Book" styleClass="button" disable="true" onAction="#handleBorrow"/>
        
     <Button fx:id="closeBT" text = "Close" styleClass="button" onAction="#handleClose"/>
   

     
    </VBox>
